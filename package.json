{
  "private": true,
  "name": "metabadges-merkle-service",
  "description": "Service for address checking and merkle proofs to redeem MetaBadges",
  "version": "1.0.0",
  "author": {
    "name": "scottrepreneur"
  },
  "contributors": [
    {
      "name": "Scott Herren",
      "email": "scottrepreneur@ethmail.cc",
      "url": "https://github.com/scottrepreneur/mb-merkle-service"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/scottrepreneur/mb-merkle-service"
  },
  "license": "MIT",
  "engines": {
    "node": ">=4.3.2"
  },
  "scripts": {
    "format": "prettier '**/*.ts'",
    "clean": "tsc --build --clean",
    "test": "jest && tsc --noEmit",
    "start": "ts-node src/local.ts",
    "build": "jest && tsc",
    "prepare": "yarn format && yarn test",
    "package": "yarn build && serverless package",
    "deploy": "yarn clean && yarn build && eval \"serverless deploy\""
  },
  "dependencies": {
    "@types/aws-serverless-express": "^3.0.1",
    "@types/compression": "^0.0.35",
    "@types/cors": "^2.8.3",
    "@types/node-fetch": "^2.5.7",
    "@types/uuid": "^7.0.3",
    "apollo-cache-inmemory": "^1.6.6",
    "apollo-client": "^2.6.10",
    "apollo-link-context": "^1.0.20",
    "apollo-link-http": "^1.5.17",
    "aws-serverless-express": "^3.1.0",
    "compression": "^1.7.1",
    "cors": "^2.8.4",
    "cross-fetch": "^3.0.4",
    "dotenv": "^8.2.0",
    "ethereumjs-util": "^7.0.1",
    "ethers": "^5.0.8",
    "express": "^4.16.2",
    "graphql": "^15.0.0",
    "graphql-tag": "^2.10.3",
    "lodash": "^4.17.20",
    "merkletreejs": "^0.1.11",
    "node-cron": "^2.0.3",
    "node-fetch": "^2.6.1",
    "ramda": "^0.27.1",
    "serverless-offline": "^6.8.0",
    "source-map-support": "^0.5.3",
    "uuid": "^8.0.0"
  },
  "devDependencies": {
    "@types/aws-sdk": "0.0.42",
    "@types/faker": "^4.1.2",
    "@types/jest": "^21.1.9",
    "@types/node": "^8.5.1",
    "@types/supertest": "^2.0.4",
    "aws-auth-helper": "^1.0.0",
    "faker": "^4.1.0",
    "jest": "^22.0.4",
    "prettier": "^1.9.2",
    "serverless": "^1.26.0",
    "serverless-plugin-typescript": "^1.1.9",
    "supertest": "^3.1.0",
    "ts-jest": "^22.0.0",
    "ts-node": "^3.3.0",
    "typescript": "^3.1.3"
  },
  "prettier": {
    "parser": "typescript",
    "semi": true,
    "singleQuote": false,
    "trailingComma": "all"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": ".*\\.test.(ts|tsx|js)",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
